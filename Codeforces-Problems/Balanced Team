Link: https://codeforces.com/problemset/problem/1133/C

#include <bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin >> n;

    vector<int> v(n);
    for(int i = 0; i < n; i++){
        cin >> v[i];
    }

    sort(v.begin(), v.end());

    int i = 0, ans = 0;
    for(int j = 0; j < n; j++){
        while(v[j] - v[i] > 5){
            i++;
        }
        ans = max(ans, j - i + 1);
    }
    cout << ans << endl;

    return 0;
}
