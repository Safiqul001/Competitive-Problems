Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=2827

#include <bits/stdc++.h>
using namespace std;

int main(){
    int T;
    cin >> T;
    for(int i = 1; i <= T; ++i){
        vector<int> salaries(3);
        cin >> salaries[0] >> salaries[1] >> salaries[2];
        sort(salaries.begin(), salaries.end());
        cout << "Case " << i << ": " << salaries[1] << endl;
    }
    return 0;
}
