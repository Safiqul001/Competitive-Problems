Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=1241

#include <bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin >> n;

    while (n--){
        int f;
        cin >> f;
        long long total_premium = 0;

        for (int i = 0; i < f; ++i){
            long long size, animals, eco;
            cin >> size >> animals >> eco;

            total_premium += size * eco;
        }

        cout << total_premium << endl;
    }

    return 0;
}
