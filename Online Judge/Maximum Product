Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=2000

#include <bits/stdc++.h>
using namespace std;

int main(){
    int caseNum = 1;
    int N;

    while(cin >> N){
        vector<int> arr(N);
        for(int i = 0; i < N; ++i){
            cin >> arr[i];
        }

        long long maxProduct = 0;

        for(int i = 0; i < N; ++i){
            long long product = 1;
            for(int j = i; j < N; ++j){
                product *= arr[j];
                if(product > maxProduct){
                    maxProduct = product;
                }
            }
        }

        cout << "Case #" << caseNum++ << ": The maximum product is " << maxProduct << "." << endl;
        cout << endl;

        cin.ignore();
        while (cin.peek() == '\n') cin.get();
    }

    return 0;
}
