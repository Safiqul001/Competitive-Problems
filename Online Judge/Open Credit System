Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=2019

#include <bits/stdc++.h>
using namespace std;

int main(){
    int T;
    cin >> T;

    while(T--){
        int n;
        cin >> n;

        vector<int> scores(n);
        for(int i = 0; i < n; ++i){
            cin >> scores[i];
        }

        int max_score = scores[0];
        int max_diff = INT_MIN;

        for(int i = 1; i < n; ++i){
            max_diff = max(max_diff, max_score - scores[i]);
            max_score = max(max_score, scores[i]);
        }

        cout << max_diff << '\n';
    }

    return 0;
}
