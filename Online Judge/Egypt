Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=2954

#include <bits/stdc++.h>
using namespace std;

int main(){
    int a, b, c;
    while(cin >> a >> b >> c){
        if (a == 0 && b == 0 && c == 0)
            break;

        int sides[3] = {a, b, c};
        sort(sides, sides + 3);

        if(sides[0]*sides[0] + sides[1]*sides[1] == sides[2]*sides[2])
            cout << "right" << endl;
        else
            cout << "wrong" << endl;
    }
    return 0;
}

