Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=532

#include <bits/stdc++.h>
using namespace std;

int main(){
    int n, set_num = 1;

    while(cin >> n && n != 0){
        vector<int> stacks(n);
        int total = 0;

        for(int i = 0; i < n; ++i){
            cin >> stacks[i];
            total += stacks[i];
        }

        int average = total / n;
        int moves = 0;

        for(int i = 0; i < n; ++i){
            if(stacks[i] > average){
                moves += (stacks[i] - average);
            }
        }

        cout << "Set #" << set_num << endl;
        cout << "The minimum number of moves is " << moves << ".\n\n";
        set_num++;
    }

    return 0;
}
