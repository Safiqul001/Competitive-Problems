Link: https://onlinejudge.org/index.php?option=com_onlinejudge&Itemid=8&page=show_problem&problem=982

#include <bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin >> t;
    while(t--){
        int n;
        cin >> n;
        int a[n];
        int sum = 0;
        for(int i = 0; i < n; i++){
            cin >> a[i];
        }
        sort(a, a+n);
        for(int i = 0; i < n; i++){
            sum += abs(a[i] - a[n/2]);
        }
        cout << sum << endl;
    }
    return 0;
}

or

#include <bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin >> t;
    while(t--){
        int n;
        cin >> n;
        vector<int> a(n);
        for(int i = 0; i < n; i++){
            cin >> a[i];
        }

        sort(a.begin(), a.end());
        int median = a[n / 2];

        int sum = 0;
        for(int i = 0; i < n; i++){
            sum += abs(a[i] - median);
        }

        cout << sum << endl;
    }
    return 0;
}
